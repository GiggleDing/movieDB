@model MvcMovie.Models.UserInfo
@{
    Layout = "_Layout1";
} *

<div class="container">
<div class="modal-dialog" id="login_form">
    <div class="modal-content">

        <div class="modal-title">
            <br>
            <h2 style="color: black; margin: 2; text-align: center">完善个人信息</h2>
        </div>
        <div class="main-part">


            <div class="modal-body index-news-list" id="index-news-list-1">
                <form name="myForm" class="loginForm" id="loginForm" asp-controller="UserInfo" asp-action="Edit"
                    method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        联系方式：
                        <input class="form-control required" id="name" type="text" value=@ViewData["UserName"]>
                    </div>

                    <div class="form-group">
                        邮箱：   
                        <input class="form-control required" name="Email"
                            asp-for="Email">
                    </div>
                    <div class="form-group">
                        个性签名：   
                        <input class="form-control required" name="Signature" 
                            asp-for="Signature">
                    </div>
                    <div class="form-group">
                        个人标签：   
                        <input class="form-control1 required" name="Label1" 
                            asp-for="Label1">
                        <input class="form-control1 required" name="Label2"
                            asp-for="Label2">
                        <input class="form-control1 required" name="Label3"
                            asp-for="Label3">
                    </div> 
                    <input type="hidden" asp-for="ID" />
                    <input type="hidden" asp-for="UserID" />
                    <input type="hidden" asp-for="UserName" />
                    <input type="hidden" asp-for="Avatar" />

                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">保存</button>
                    </div>


                </form>

            </div>

            <div class="change-image">

                <form asp-controller="UserInfo" asp-action="UploadFile" enctype="multipart/form-data" method="post" accept="image/*">
                    <a style="background: url(@Model.Avatar) no-repeat 100% 100%;background-size: 200px 200px;">
                        @* <img src="@Model.Avatar"> *@
                        <input type="file" name="file" class="form-control2" />
                    </a>
                    <button type="submit">上传文件</button>

                </form>
            </div>


        </div>


    </div>
</div>
</div>
